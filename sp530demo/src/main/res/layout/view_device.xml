            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/val_ch2_ipone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:inputType="phone"
                    android:digits="0123456789"
                    android:numeric="integer"
                    android:maxLines="1"
                    android:maxLength="3"
                    android:text=""
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|bottom"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:text="."
                    />

                <EditText
                    android:id="@+id/val_ch2_iptwo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:inputType="phone"
                    android:numeric="integer"
                    android:maxLines="1"
                    android:maxLength="3"
                    android:text=""
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|bottom"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:text="."
                    />

                <EditText
                    android:id="@+id/val_ch2_ipthree"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:inputType="phone"
                    android:numeric="integer"
                    android:maxLines="1"
                    android:maxLength="3"
                    android:text=""
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|bottom"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:text="."
                    />

                <EditText
                    android:id="@+id/val_ch2_ipfour"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:inputType="phone"
                    android:numeric="integer"
                    android:maxLines="1"
                    android:maxLength="3"
                    android:text=""
                    />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:textColor="@color/color_44"
                android:textSize="@dimen/textsize_general"
                android:text="@string/port"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/val_ch2_port"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:inputType="phone"
                    android:digits="0123456789"
                    android:numeric="integer"
                    android:maxLines="1"
                    android:maxLength="5"
                    android:text=""
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:textColor="@color/color_44"
                android:textSize="@dimen/textsize_general"
                android:text="@string/timeout_seconds"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/val_ch2_to"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:inputType="phone"
                    android:digits="0123456789"
                    android:numeric="integer"
                    android:maxLines="1"
                    android:maxLength="3"
                    android:text=""
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                >
                <TextView
                    android:id="@+id/val_ch2_ssl"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:text="@string/enable_ssl"
                    android:textSize="@dimen/textsize_general"
                    android:textColor="#FF333333"
                    android:drawableRight="@drawable/settings_check"
                    android:drawablePadding="12dp"
                    android:clickable="true"
                    />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="bottom"
                >
                <Button
                    android:id="@+id/btn_setmfgconfig"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/blue_login_roundcorner"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:text="@string/set_mcp_config"
                    />
            </LinearLayout>

        </LinearLayout>
		
	</ScrollView>

</LinearLayout>
	    
