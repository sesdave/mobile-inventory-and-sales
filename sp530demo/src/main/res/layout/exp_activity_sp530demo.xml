<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFFFF"
>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
    >
        <TextView
            android:id="@+id/tv_message"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="#000000"
            android:text=""
            android:textSize="18sp"
        />
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id="@+id/tv_message2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="left|center_vertical"
            android:textColor="#000000"
            android:text=""
            android:textSize="18sp"
            />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        >
        <Button
            android:id="@+id/btn_debug"
            android:layout_height="50dp"
            android:layout_width="140dp"
            android:text="@string/debug"
            android:onClick="onClick_debug"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/btn_linkmode"
            android:layout_height="50dp"
            android:layout_width="140dp"
            android:text="@string/link_mode"
            android:onClick="onClick_linkmode"
            android:visibility="visible"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        >
        <Button
            android:id="@+id/btn_reset"
            android:layout_height="50dp"
            android:layout_width="140dp"
            android:text="@string/reset"
            android:onClick="onClick_reset"
            android:visibility="gone"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
    >
        <Button
            android:id="@+id/btn_servermode"
            android:layout_height="50dp"
            android:layout_width="140dp"
            android:text="@string/server_mode"
            android:onClick="onClick_servermode"
        />

        <Button
            android:id="@+id/btn_clientmode"
            android:layout_height="50dp"
            android:layout_width="140dp"
            android:text="@string/client_mode"
            android:onClick="onClick_clientmode"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        >
        <Button
            android:id="@+id/btn_find"
            android:layout_height="50dp"
            android:layout_width="140dp"
            android:text="@string/search"
            android:onClick="onClick_find"
            android:visibility="gone"
        />

        <Button
            android:id="@+id/btn_find_cancel"
            android:layout_height="50dp"
            android:layout_width="140dp"
            android:text="@string/cancel_search"
            android:onClick="onClick_findCancel"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

        <ListView
            android:id="@+id/pairedlistview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="#CCCCCC"
        />

        <ListView
            android:id="@+id/searchedlistview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="#CCCCCC"
        />

    </LinearLayout>

</LinearLayout>
