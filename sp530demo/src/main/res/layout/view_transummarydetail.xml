<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transsummarydetail"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/transaction_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_top_small"
        android:layout_marginBottom="@dimen/margin_bottom_small"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_login_selector"
            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#00000000"
                android:textSize="@dimen/textsize_general"
                android:textColor="@color/color_44"
                android:text="@string/transaction_receipt"
                />
        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/transsummarydetail_contentcontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_left_general"
            android:paddingRight="@dimen/padding_right_general"
            android:background="#FFFFFFFF"
            >

            <TextView
                android:id="@+id/tv_Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_small"
                android:gravity="center_horizontal"
                android:textColor="#00b000"
                android:textSize="28sp"
                android:text=""
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_top_small"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_44"
                android:textSize="@dimen/textsize_general"
                android:text=""
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_44"
                android:textSize="@dimen/textsize_general"
                android:text=""
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_top_general"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
