<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.spectratech.sp530demo.view.BTPrinterCommandListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <include layout="@layout/view_separator"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_left_general"
        android:layout_marginRight="@dimen/margin_right_general"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_top_small"
            >
            <LinearLayout
                android:id="@+id/btn_scrolltocurrentcommandpos"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/blue_login_selector"
                android:layout_marginRight="@dimen/margin_right_smaller"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:src="@drawable/arrow_return_right_128px"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_44"
                android:textSize="@dimen/textsize_general"
                android:text="@string/select_wcolon"
                />
            <TextView
                android:id="@+id/tv_valselect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_44"
                android:textSize="@dimen/textsize_general"
                android:lines="1"
                android:ellipsize="end"
                android:text="-"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/input_amount_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_roundcorner_focus"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >
            <!--<com.spectratech.sp530demo.view.FixKeyboardEditText-->
                <!--android:id="@+id/input_amount"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginLeft="24dp"-->
                <!--android:layout_marginRight="24dp"-->
                <!--android:gravity="center_vertical|left"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:inputType="phone"-->
                <!--android:digits="1234567890"-->
                <!--android:textColor="@color/color_44"-->
                <!--android:textSize="24dp"-->
                <!--android:hint="Type here"-->
                <!--android:textColorHint="@color/userinfo_hint_color"-->
                <!--android:background="#00000000"-->
                <!--android:lines="1"-->
                <!--android:maxLength="@integer/max_input_amount_digits"-->
                <!--android:ellipsize="end"-->
                <!--android:focusable="true"-->
                <!--/>-->
            <com.spectratech.sp530demo.view.FixKeyboardEditText
                android:id="@+id/input_amount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/color_44"
                android:textSize="24dp"
                android:hint="Type here"
                android:textColorHint="@color/userinfo_hint_color"
                android:background="#00000000"
                android:lines="1"
                android:singleLine="true"
                android:maxLength="32"
                android:ellipsize="end"
                android:focusable="true"
                />

            <LinearLayout
                android:id="@+id/btn_clearamount"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/blue_login_selector"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:src="@drawable/cross_black_128px"
                    />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/transaction_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:id="@+id/btn_view_log"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_login_selector"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_key_numpad"
                    android:gravity="center"
                    android:background="#00000000"
                    android:textSize="@dimen/textsize_general"
                    android:textColor="@color/color_44"
                    android:text="@string/view_log"
                    />
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="0dp"
                />

            <LinearLayout
                android:id="@+id/btn_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_login_selector"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_key_numpad"
                    android:gravity="center"
                    android:background="#00000000"
                    android:textSize="@dimen/textsize_general"
                    android:textColor="@color/color_44"
                    android:text="@string/start"
                    />
            </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/transaction_panel_mfg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:id="@+id/btn_startinfmfgprint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_login_selector"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_key_numpad"
                    android:gravity="center"
                    android:background="#00000000"
                    android:textSize="@dimen/textsize_general"
                    android:textColor="@color/color_44"
                    android:text="@string/start_mfg_info_print"
                    />
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="0dp"
                />

            <LinearLayout
                android:id="@+id/btn_stopinfmfgprint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_login_selector"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_key_numpad"
                    android:gravity="center"
                    android:background="#00000000"
                    android:textSize="@dimen/textsize_general"
                    android:textColor="@color/color_44"
                    android:text="@string/stop_mfg_info_print"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>
