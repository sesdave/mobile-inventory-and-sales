<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:textColor="@color/color_44"
            android:textSize="@dimen/textsize_general"
            android:text="@string/command"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_roundcorner_focus"
            >
            <TextView
                android:id="@+id/tv_command_dropdown"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/color_44"
                android:textSize="18sp"
                android:hint="Select Command"
                android:textColorHint="@color/userinfo_hint_color"
                android:background="#00000000"
                android:maxLines="1"
                android:singleLine="true"
                android:drawableRight="@drawable/img_dropdownmenu_arrow"
                android:drawablePadding="10dp"
                />
        </LinearLayout>
    </LinearLayout>

    <!--<com.spectratech.sp530demo.view.CommandListView-->
        <!--android:id="@+id/list"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="200dp"-->
        <!--/>-->

    <!--<include layout="@layout/view_separator_endfadeout"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_left_general"
        android:layout_marginRight="@dimen/margin_right_general"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_top_small"
            >
            <!--<LinearLayout-->
                <!--android:id="@+id/btn_scrolltocurrentcommandpos"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:gravity="center"-->
                <!--android:background="@drawable/blue_login_selector"-->
                <!--android:layout_marginRight="@dimen/margin_right_smaller"-->
                <!-->-->
                <!--<ImageView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="#00000000"-->
                    <!--android:src="@drawable/arrow_return_right_128px"-->
                    <!--/>-->
            <!--</LinearLayout>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_44"
                android:textSize="@dimen/textsize_general"
                android:text="@string/input_command_hex_wcolon"
                />
            <EditText
                android:id="@+id/et_inputcmd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_44"
                android:textSize="@dimen/textsize_general"
                android:maxLength="2"
                android:lines="1"
                android:ellipsize="end"
                android:text=""
                android:focusable="true"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_44"
            android:textSize="@dimen/textsize_general"
            android:text="@string/input_data_hex"
            />
        <RelativeLayout
            android:id="@+id/input_amount_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_roundcorner_focus"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <LinearLayout
                android:id="@+id/btn_clearamount"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/blue_login_selector"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:src="@drawable/cross_black_128px"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/input_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/color_44"
                android:textSize="18sp"
                android:textColorHint="@color/userinfo_hint_color"
                android:background="#00000000"
                android:text="000000000001"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/transaction_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:id="@+id/btn_view_log"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_login_selector"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_key_numpad"
                    android:gravity="center"
                    android:background="#00000000"
                    android:textSize="@dimen/textsize_general"
                    android:textColor="@color/color_44"
                    android:text="@string/view_log"
                    />
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="0dp"
                />

            <LinearLayout
                android:id="@+id/btn_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_login_selector"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_key_numpad"
                    android:gravity="center"
                    android:background="#00000000"
                    android:textSize="@dimen/textsize_general"
                    android:textColor="@color/color_44"
                    android:text="@string/start"
                    />
            </LinearLayout>
            
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_44"
            android:textSize="@dimen/textsize_general"
            android:text="@string/s3ins_response_data_from_fngetresponse"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:id="@+id/btn_view_responsedata"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_login_selector"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_key_numpad"
                    android:gravity="center"
                    android:background="#00000000"
                    android:textSize="@dimen/textsize_general"
                    android:textColor="@color/color_44"
                    android:text="Show response data"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp" />

</LinearLayout>
</ScrollView>
</LinearLayout>
