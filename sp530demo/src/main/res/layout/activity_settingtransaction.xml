<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
>

	<ScrollView
	    android:layout_width="match_parent"
		android:layout_height="match_parent"
    >
		<LinearLayout
		    android:layout_width="match_parent"
			android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
		>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/color_44"
                    android:textSize="24dp"
                    android:text="@string/setting_transaction_title"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:text="@string/extra_tlv"
                    />
                <com.spectratech.lib.view.SingleLineEditText
                    android:id="@+id/settings_transaction_extratlv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/margin_left_smaller"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:hint=""
                    android:textColorHint="@color/userinfo_hint_color"
                    android:singleLine="true"
                    android:text=""
                    android:includeFontPadding="false"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/settings_transaction_simulatetcphost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="46dp"
                    android:gravity="center_vertical"
                    android:text="@string/settings_trans_simulatetcphost"
                    android:textSize="@dimen/textsize_general"
                    android:textColor="#FF333333"
                    android:drawableRight="@drawable/settings_check"
                    android:drawablePadding="12dp"
                    android:clickable="true"
                    android:onClick="onTransactionSimulateTCPHost"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:textColor="@color/color_44"
                android:textSize="@dimen/textsize_general"
                android:text="@string/transaction_result_rawpacket_encap_only"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_roundcorner_focus"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/conf_trans_result_tv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="24dp"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/color_44"
                    android:textSize="18sp"
                    android:hint="Transaction result"
                    android:textColorHint="@color/userinfo_hint_color"
                    android:background="#00000000"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:drawableRight="@drawable/img_dropdownmenu_arrow"
                    android:drawablePadding="10dp"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:text="@string/max_trans_in_batch_mode"
                    />
                <TextView
                    android:id="@+id/conf_trans_max_iteration_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:text=""
                    />

                <SeekBar
                    android:id="@+id/conf_trans_max_iteration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:max="4990"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:text="@string/comm_timeout_seconds_wbkt"
                    />
                <TextView
                    android:id="@+id/conf_trans_com_to_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:text=""
                    />

                <SeekBar
                    android:id="@+id/conf_trans_com_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="bottom"
            >
                <Button
                    android:id="@+id/register_save_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/blue_login_roundcorner"
                    android:textColor="@color/color_44"
                    android:textSize="@dimen/textsize_general"
                    android:text="@string/btn_save"
                    android:onClick="onProcess"
                    />
            </LinearLayout>




        </LinearLayout>
		
	</ScrollView>

</LinearLayout>
	    
