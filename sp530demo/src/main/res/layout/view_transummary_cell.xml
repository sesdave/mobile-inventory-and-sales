<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transsummary_cell"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_left_general"
        android:layout_marginRight="@dimen/margin_right_general"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00b000"
            android:textSize="22sp"
            android:text=""
            />

        <TextView
            android:id="@+id/tv_general"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_44"
            android:textSize="@dimen/textsize_general"
            android:text=""
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_left_general"
            android:layout_marginRight="@dimen/margin_right_general"
            >
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_44"
                android:textSize="@dimen/textsize_general"
                android:text=""
                />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/view_separator_endfadeout_margin" />

</LinearLayout>
