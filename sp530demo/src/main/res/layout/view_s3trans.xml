<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_cc"
    >

    <!--<include layout="@layout/view_separator" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_left_general"
        android:layout_marginRight="@dimen/margin_right_general"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/input_amount_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_roundcorner_focus"
                android:layout_marginTop="5dp"
                >
                <com.spectratech.sp530demo.view.FixKeyboardEditText
                    android:id="@+id/input_amount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_key_numpad"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:gravity="center_vertical|right"
                    android:inputType="phone"
                    android:digits="1234567890"
                    android:textColor="@color/color_44"
                    android:textSize="32dp"
                    android:hint=""
                    android:textColorHint="@color/userinfo_hint_color"
                    android:background="#00000000"
                    android:lines="1"
                    android:maxLength="@integer/max_input_amount_characters"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:text=""
                    android:cursorVisible="false"
                    />


                <LinearLayout
                    android:id="@+id/btn_clearamount"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/red_login_selector"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:src="@drawable/cross_black_128px"
                        />
                </LinearLayout>

            </RelativeLayout>

            <!--input set keypad-->
            <LinearLayout
                android:id="@+id/transaction_user_input_keypad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/numpad_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blue_login_selector"
                        android:tag="1"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_numpad"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_large"
                            android:textColor="@color/color_44"
                            android:text="1"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp" />
                    <LinearLayout
                        android:id="@+id/numpad_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blue_login_selector"
                        android:tag="2"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_numpad"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_large"
                            android:textColor="@color/color_44"
                            android:text="2"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp" />
                    <LinearLayout
                        android:id="@+id/numpad_three"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blue_login_selector"
                        android:tag="3"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_numpad"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_large"
                            android:textColor="@color/color_44"
                            android:text="3"
                            />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/numpad_four"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blue_login_selector"
                        android:tag="4"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_numpad"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_large"
                            android:textColor="@color/color_44"
                            android:text="4"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp" />
                    <LinearLayout
                        android:id="@+id/numpad_five"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blue_login_selector"
                        android:tag="5"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_numpad"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_large"
                            android:textColor="@color/color_44"
                            android:text="5"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp" />
                    <LinearLayout
                        android:id="@+id/numpad_six"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blue_login_selector"
                        android:tag="6"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_numpad"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_large"
                            android:textColor="@color/color_44"
                            android:text="6"
                            />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/numpad_seven"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blue_login_selector"
                        android:tag="7"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_numpad"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_large"
                            android:textColor="@color/color_44"
                            android:text="7"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp" />
                    <LinearLayout
                        android:id="@+id/numpad_eight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blue_login_selector"
                        android:tag="8"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_numpad"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_large"
                            android:textColor="@color/color_44"
                            android:text="8"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp" />
                    <LinearLayout
                        android:id="@+id/numpad_nine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blue_login_selector"
                        android:tag="9"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_numpad"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_large"
                            android:textColor="@color/color_44"
                            android:text="9"
                            />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/numpad_del"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/yellow_login_selector"
                        android:tag="del"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_numpad"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_large"
                            android:textColor="@color/color_44"
                            android:text="DEL"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp" />
                    <LinearLayout
                        android:id="@+id/numpad_zero"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blue_login_selector"
                        android:tag="0"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_numpad"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_large"
                            android:textColor="@color/color_44"
                            android:text="0"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp" />
                    <LinearLayout
                        android:id="@+id/numpad_go"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/green_login_selector"
                        android:tag="go"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_numpad"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_large"
                            android:textColor="@color/color_44"
                            android:text="GO"
                            />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <!--input set one-->
            <LinearLayout
                android:id="@+id/transaction_user_input_setone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <LinearLayout
                    android:id="@+id/transaction_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:id="@+id/btn_starttransaction_batch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/blue_login_selector"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_transaction"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_general"
                            android:textColor="@color/color_44"
                            android:text="@string/start_batch_transactions"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_starttransaction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/blue_login_selector"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_transaction"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_general"
                            android:textColor="@color/color_44"
                            android:text="@string/start_transaction"
                            />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/transaction_history_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:id="@+id/btn_view_trans_history"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blue_login_selector"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_transaction"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_general"
                            android:textColor="@color/color_44"
                            android:text="@string/transaction_history"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/transaction_receipt_demo_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:id="@+id/btn_view_trans_receipt_demo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blue_login_selector"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_key_transaction"
                            android:gravity="center"
                            android:background="#00000000"
                            android:textSize="@dimen/textsize_general"
                            android:textColor="@color/color_44"
                            android:text="@string/demo_transaction_receipt"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
